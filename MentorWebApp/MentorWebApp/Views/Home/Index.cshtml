@{
    ViewData["Title"] = "Home Page";
}


<div class="container">
    <div class="row">
        <div class="col-md-6 col-md-offset-3 text-center">
            <h1>Mentorship Knowledgebase</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-md-6 col-md-offset-3">

            <form method="get" action="@Url.Action("Index", "SearchResults")">

                <div class="input-group">

                    <input type="text" id="search" class="search-query form-control" placeholder="Search resources, ask a question" name="search">
                    <input type="hidden" name="sortSelect" value="alpha" />
                    <input type="hidden" name="typeSelect" value="both" />
                    <span class="input-group-btn">
                        <button class="btn .btn-primary" type="submit" id="searchButton">
                            <span class="glyphicon glyphicon-search"></span>
                        </button>
                    </span>

                </div>
            </form>

        </div>
    </div>
    <div class="row col-md-offset-2">
        <h3></h3>

        <div class="col-xs-6 col-md-3">

            <div class="thumbnail">
                <a href="https://localhost:44324/SearchResults?search=Study+Skills&sortSelect=alpha&typeSelect=res">
                    <img src="http://theatelieracademy.com/wp-content/uploads/2016/09/coming-soon-400x400.jpg" width="500" height="500">
                    <div class="caption">
                        <h4>Study skills</h4>

                    </div>
                </a>
            </div>


            <div class="thumbnail" role="button">
                <a href="https://localhost:44324/SearchResults?search=Plagiarism&sortSelect=alpha&typeSelect=res">
                    <img src="http://theatelieracademy.com/wp-content/uploads/2016/09/coming-soon-400x400.jpg" width="500" height="500" border: 1px solid #ddd>
                    <div class="caption">
                        <h4>Plagiarism</h4>

                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail" role="button">
                <a href="https://localhost:44324/SearchResults?search=Time+management&sortSelect=alpha&typeSelect=res">
                    <img src="http://theatelieracademy.com/wp-content/uploads/2016/09/coming-soon-400x400.jpg" width="500" height="500" border: 1px solid #ddd>
                    <div class="caption">
                        <h4>Time management</h4>

                    </div>
                </a>
            </div>
            <div class="thumbnail" role="button">
                <a href="https://localhost:44324/SearchResults?search=research&sortSelect=alpha&typeSelect=res">
                    <img src="http://theatelieracademy.com/wp-content/uploads/2016/09/coming-soon-400x400.jpg" width="500" height="500" border: 1px solid #ddd>
                    <div class="caption">
                        <h4>Research</h4>

                    </div>
                </a>
            </div>
        </div>
        <div class="col-xs-6 col-md-3">
            <div class="thumbnail" role="button">
                <a href="https://localhost:44324/SearchResults?search=Referencing&sortSelect=alpha&typeSelect=res">
                    <img src="http://theatelieracademy.com/wp-content/uploads/2016/09/coming-soon-400x400.jpg" width="500" height="500" border: 1px solid #ddd>
                    <div class="caption">
                        <h4>Referencing</h4>

                    </div>
                </a>
            </div>
            <div class="thumbnail" role="button">
                <a href="https://localhost:44324/SearchResults?search=Essay+Writing&sortSelect=alpha&typeSelect=res">
                    <img src="http://theatelieracademy.com/wp-content/uploads/2016/09/coming-soon-400x400.jpg" width="500" height="500" border: 1px solid #ddd>
                    <div class="caption">
                        <h4>Essay Writing</h4>

                    </div>
                </a>
            </div>

        </div>

        <div class="col-md-3 ">
            <a class="twitter-timeline" href="https://twitter.com/UCT_news?ref_src=twsrc%5Etfw" data-height="600">Tweets by UCT_news</a>
            <script async src="//platform.twitter.com/widgets.js" charset="utf-8"></script>
        </div>

    </div>

    <div class="row col-md-8 col-md-offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Popular Resources</th>

                </tr>
            </thead>
            <tbody>

                @{for (var i = 0; i < 5; i++)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>


    <div class="row col-md-8 col-md-offset-2">
        <table class="table">
            <thead>
                <tr>
                    <th>Popular Questions</th>
                </tr>
            </thead>
            <tbody>

                @{for (var i = 0; i < 5; i++)
                    {
                        <tr>
                            <td>
                                @i
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
    </div>

</div>